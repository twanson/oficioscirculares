// --- UTM passthrough + GA4 tracking ---
document.addEventListener('DOMContentLoaded', function() {
  const CTA_URL = 'https://tally.so/r/nPxWM0'; // destino provisional
  const EXAMPLE_URL = '/downloads/ejemplo-roadmap.pdf'; // si no existe, ajustar cuando lo tengas

  function readUTMs() {
    const params = new URLSearchParams(window.location.search);
    const utms = {};
    for (const [k, v] of params.entries()) {
      if (k.toLowerCase().startsWith('utm_')) utms[k] = v;
    }
    return utms;
  }

  function buildUTMLink(baseUrl, location) {
    const url = new URL(baseUrl, window.location.origin);
    const utms = readUTMs();
    if (!utms.utm_source) utms.utm_source = 'site';
    if (!utms.utm_medium) utms.utm_medium = 'internal';
    utms.utm_campaign = 'oc-roadmap-3d';
    utms.utm_content = location;
    Object.entries(utms).forEach(([k,v]) => url.searchParams.set(k, v));
    return url.toString();
  }

  function attachCTA(el, baseUrl, location) {
    if (!el) return;
    const target = buildUTMLink(baseUrl, location);
    el.setAttribute('href', target);
    el.addEventListener('click', function() {
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({ event: 'click_cta', cta_offer: 'roadmap-3d', cta_location: location });
    });
  }

  attachCTA(document.getElementById('cta-hero'), CTA_URL, 'landing-hero');
  attachCTA(document.getElementById('cta-flow'), CTA_URL, 'landing-flow');
  attachCTA(document.getElementById('cta-footer'), CTA_URL, 'landing-footer');
