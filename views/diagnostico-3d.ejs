<script>
// --- UTM passthrough + GA4 tracking ---
document.addEventListener('DOMContentLoaded', function() {
  const CTA_URL = 'https://tally.so/r/nPxWM0'; // destino provisional
  const EXAMPLE_URL = '/casos/e-wear';

  function readUTMs() {
    const params = new URLSearchParams(window.location.search);
    const utms = {};
    for (const [k, v] of params.entries()) {
      if (k.toLowerCase().startsWith('utm_')) utms[k] = v;
    }
    return utms;
  }

  function buildUTMLink(baseUrl, location) {
    const url = new URL(baseUrl, window.location.origin);
    const utms = readUTMs();
    // Defaults si no vienen
    if (!utms.utm_source) utms.utm_source = 'site';
    if (!utms.utm_medium) utms.utm_medium = 'internal';
    utms.utm_campaign = 'oc-diagnostico-3d';
    utms.utm_content = location;
    Object.entries(utms).forEach(([k,v]) => url.searchParams.set(k, v));
    return url.toString();
  }

  function withMailtoUTM(mailtoHref, location) {
    try {
      const parts = mailtoHref.split('?');
      const base = parts[0];
      const q = new URLSearchParams(parts[1] || '');
      const utms = readUTMs();
      if (!utms.utm_source) utms.utm_source = 'site';
      if (!utms.utm_medium) utms.utm_medium = 'internal';
      utms.utm_campaign = 'oc-diagnostico-3d';
      utms.utm_content = location;
      const bodySuffix = Object.entries(utms).map(([k,v]) => `${k}=${encodeURIComponent(v)}`).join('&');
      const currentBody = q.get('body') || '';
      q.set('body', (currentBody ? currentBody + '\n\n' : '') + 'UTM: ' + bodySuffix);
      return `${base}?${q.toString()}`;
    } catch (e) {
      return mailtoHref;
    }
  }

  function attachCTA(el, baseUrl, location) {
    if (!el) return;
    const target = buildUTMLink(baseUrl, location);
    el.setAttribute('href', target);
    el.addEventListener('click', function() {
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({ event: 'click_cta', cta_offer: 'diagnostico-3d', cta_location: location });
    });
  }

  attachCTA(document.getElementById('cta-hero'), CTA_URL, 'landing-hero');
  attachCTA(document.getElementById('cta-flow'), CTA_URL, 'landing-flow');
  attachCTA(document.getElementById('cta-footer'), CTA_URL, 'landing-footer');

  // Email CTAs
  const e1 = document.getElementById('cta-hero-email');
  if (e1) e1.setAttribute('href', withMailtoUTM(e1.getAttribute('href'), 'landing-hero'));
  const e2 = document.getElementById('cta-footer-email');
  if (e2) e2.setAttribute('href', withMailtoUTM(e2.getAttribute('href'), 'landing-footer'));

  // Ejemplo secundario
  const ex = document.getElementById('cta-ejemplo');
  if (ex) ex.setAttribute('href', buildUTMLink(EXAMPLE_URL, 'landing-example'));
});
</script>
