<script>
// UTM y GA4 consistentes en la landing Diagnóstico 3D
document.addEventListener('DOMContentLoaded', function() {
  function attachTracking(el, content) {
    if (!el) return;
    const href = el.getAttribute('href') || '#';
    if (href.startsWith('mailto:')) {
      const [base, raw] = href.split('?');
      const q = new URLSearchParams(raw || '');
      const body = q.get('body') || '';
      const utm = `utm_source=site&utm_medium=organic&utm_campaign=oc-diagnostico-3d&utm_content=${encodeURIComponent(content)}`;
      q.set('body', body ? body + "\n\n" + utm : utm);
      el.setAttribute('href', `${base}?${q.toString()}`);
    } else {
      const u = new URL(href, window.location.origin);
      const page = new URLSearchParams(window.location.search);
      for (const [k,v] of page) if (k.startsWith('utm_')) u.searchParams.set(k,v);
      u.searchParams.set('utm_source','site');
      u.searchParams.set('utm_medium','organic');
      u.searchParams.set('utm_campaign','oc-diagnostico-3d');
      u.searchParams.set('utm_content',content);
      el.setAttribute('href', u.toString());
    }
    el.addEventListener('click', function(){
      window.dataLayer = window.dataLayer || [];
      const ev = el.dataset.event || 'click_cta';
      const label = el.dataset.label || content;
      window.dataLayer.push({ event: ev, cta_offer: 'diagnostico-3d', cta_location: content, label });
    });
  }
  attachTracking(document.getElementById('cta-hero'), 'hero');
  attachTracking(document.getElementById('cta-hero-email'), 'hero');
  attachTracking(document.getElementById('cta-flow'), 'flow');
  attachTracking(document.getElementById('cta-ejemplo'), 'ejemplo');
  attachTracking(document.getElementById('cta-footer'), 'footer');
  attachTracking(document.getElementById('cta-footer-email'), 'footer');
  attachTracking(document.getElementById('cta-sticky-primary'), 'sticky');
  attachTracking(document.getElementById('cta-sticky-secondary'), 'sticky');
});
</script>

