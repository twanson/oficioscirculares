            Object.entries(utm).forEach(([key, value]) => {
                url.searchParams.set(key, value);
            });
            
            return url.toString();
        }
        
        // GA4 Event Tracking
        function trackCTAClick(service) {
            // Initialize dataLayer if it doesn't exist
            window.dataLayer = window.dataLayer || [];
            
            // Push GA4 event
            window.dataLayer.push({
                event: 'click_cta',
                cta_offer: service,
                cta_location: 'home-consultoria-cards'
            });
        }
        
        // Hover s√∫per simple (con peque√±o retardo para permitir pasar el rat√≥n)
        document.addEventListener('DOMContentLoaded', function() {
            const consultoriaTrigger = document.getElementById('consultoria-trigger');
            const microCards = document.getElementById('micro-cards');
            const featuredCard = document.getElementById('consultoria');
            const servicesContainer = document.querySelector('.services .container');
            const servicesGrid = document.querySelector('.services-grid');
            const microToggle = document.getElementById('micro-toggle');
            let hideTimer = null;

            if (consultoriaTrigger && microCards) {
                const positionOverlay = () => {
                    if (!featuredCard || !servicesContainer) return;
                    const cardRect = featuredCard.getBoundingClientRect();
                    const containerRect = servicesContainer.getBoundingClientRect();
                    // Medimos la altura aunque est√© oculto (visibility hidden mantiene layout)
                    const overlayHeight = microCards.offsetHeight || 0;
                    // Centramos aproximadamente respecto a la tarjeta, empujando un poco hacia abajo
                    let top = (cardRect.top + cardRect.height / 2) - (overlayHeight / 2) - containerRect.top + 20;
                    // Evitamos que quede por encima del inicio de la tarjeta
                    const minTop = cardRect.top - containerRect.top + 8;
                    // Tambi√©n evitamos que quede excesivamente bajo (muy por debajo del borde inferior)
                    const maxTop = cardRect.bottom - containerRect.top - 40;
                    top = Math.max(minTop, Math.min(top, maxTop));
                    servicesContainer.style.setProperty('--micro-top', `${top}px`);
                };

                const show = () => {
                    if (hideTimer) {
                        clearTimeout(hideTimer);
                        hideTimer = null;
                    }
                    // Posicionar cada vez que se muestre por si la p√°gina ha hecho scroll
                    positionOverlay();
                    microCards.classList.add('is-open');
                };

                const scheduleHide = () => {
                    if (hideTimer) clearTimeout(hideTimer);
                    hideTimer = setTimeout(() => {
                        microCards.classList.remove('is-open');
                        hideTimer = null;
                    }, 80);
                };

                const isTouch = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
                const mqMobile = window.matchMedia('(max-width: 768px)');
                const mqTablet = window.matchMedia('(min-width: 769px) and (max-width: 1366px)');

                // Modo acorde√≥n en m√≥vil e iPad: insertar micro‚Äëcards tras la tarjeta verde
                const enableMobileAccordion = () => {
                    const consultoriaCard = document.getElementById('consultoria');
                    if (!consultoriaCard) return;
                    if (microCards.parentElement !== consultoriaCard) {
                        consultoriaCard.appendChild(microCards);
                    }
                    microCards.style.display = 'block';
                    microCards.classList.add('mobile-accordion');
                    microCards.classList.remove('is-open');
                    if (microToggle) microToggle.setAttribute('aria-expanded','false');
                };
                const disableMobileAccordion = () => {
                    microCards.classList.remove('mobile-accordion');
                    microCards.classList.remove('is-open');
                    microCards.style.display = '';
                };
                const applyMode = () => {
                    // Solo activar accordion en m√≥vil (no en tablet/iPad)
                    if (mqMobile.matches) {
                        enableMobileAccordion();
                    } else {
                        disableMobileAccordion();
                        // En iPad/tablet, ocultar micro-cards completamente y forzar mostrar CTA est√°tica
                        if (mqTablet.matches) {
                            microCards.style.display = 'none';
                            microCards.style.visibility = 'hidden';
                            microCards.style.opacity = '0';
                            microCards.style.pointerEvents = 'none';
                            microCards.style.position = 'absolute';
                            microCards.style.left = '-9999px';

                            // FORZAR mostrar la secci√≥n est√°tica en iPad
                            const consultoriaCta = document.getElementById('consultoria-cta-static');
                            if (consultoriaCta) {
                                consultoriaCta.style.display = 'block';
                                consultoriaCta.style.visibility = 'visible';
                                consultoriaCta.style.opacity = '1';
                            }
                        }
                    }
                };
                applyMode();
                mqMobile.addEventListener('change', applyMode);
                mqTablet.addEventListener('change', applyMode);

                // Escuchar cambios de orientaci√≥n espec√≠ficamente para iPad
                window.addEventListener('orientationchange', function() {
                    setTimeout(applyMode, 100); // Peque√±o delay para que se complete la rotaci√≥n
                });

                // Listener de resize como backup
                window.addEventListener('resize', function() {
                    if (mqTablet.matches) {
                        const consultoriaCta = document.getElementById('consultoria-cta-static');
                        if (consultoriaCta) {
                            consultoriaCta.style.display = 'block';
                            consultoriaCta.style.visibility = 'visible';
                            consultoriaCta.style.opacity = '1';
                        }
                    }
                });

                // Interacci√≥n desktop (hover)
                consultoriaTrigger.addEventListener('mouseenter', function(){
                    if (microCards.classList.contains('mobile-accordion')) return;
                    show();
                });
                consultoriaTrigger.addEventListener('mouseleave', function(){
                    if (microCards.classList.contains('mobile-accordion')) return;
                    scheduleHide();
                });
                microCards.addEventListener('mouseenter', function(){
                    if (microCards.classList.contains('mobile-accordion')) return;
                    show();
                });
                microCards.addEventListener('mouseleave', function(){
                    if (microCards.classList.contains('mobile-accordion')) return;
                    scheduleHide();
                });

                // Toggle m√≥vil
                const toggleMobile = function(e){
                    if (!microCards.classList.contains('mobile-accordion')) return;
                    // Si el clic viene desde dentro de micro-cards y es un enlace, NO interferir
                    if (microCards.contains(e.target)) {
                        const link = e.target.closest ? e.target.closest('a') : null;
                        if (link) return; // permitir navegaci√≥n
                        // Si el clic cae en el propio toggle, lo manejamos m√°s abajo
                        if (!e.target.closest || !e.target.closest('#micro-toggle')) return;
                    }
                    e.preventDefault();
                    const open = microCards.classList.toggle('is-open');
                    if (microToggle) microToggle.setAttribute('aria-expanded', open ? 'true' : 'false');
                    // Auto-scroll suave al abrir, solo m√≥vil y si hace falta
                    if (open) {
                        const prefersReduce = window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches;
                        if (!prefersReduce) {
                            setTimeout(() => {
                                const rect = microCards.getBoundingClientRect();
                                const vh = window.innerHeight || document.documentElement.clientHeight;
                                // Si el inicio del bloque queda muy abajo o fuera de vista, hacer scroll
                                if (rect.top > vh * 0.65 || rect.top < 0) {
                                    const target = document.getElementById('consultoria') || microCards;
                                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                                }
                            }, 220);
                        }
                    }
                };
                consultoriaTrigger.addEventListener('click', toggleMobile);
                if (microToggle) microToggle.addEventListener('click', toggleMobile);
                // Delegaci√≥n extra por si el click cae en hijos del toggle
                microCards.addEventListener('click', function(e){
                    if (!microCards.classList.contains('mobile-accordion')) return;
                    const t = e.target;
                    if (t && (t.id === 'micro-toggle' || t.closest && t.closest('#micro-toggle'))) {
                        toggleMobile(e);
                    }
                });

                // Reposicionar en scroll/resize para mantener altura correcta
                window.addEventListener('scroll', () => {
                    if (microCards.classList.contains('is-open')) positionOverlay();
                }, { passive: true });
                window.addEventListener('resize', () => {
                    if (microCards.classList.contains('is-open')) positionOverlay();
                });

                // Precalcular posici√≥n y rasterizar contenido para evitar retraso la primera vez
                positionOverlay();
                // Fuerza una lectura de layout para precalentar render del contenido
                void microCards.offsetHeight;
                // Opcional: recalcular cuando terminen de cargar fuentes e im√°genes
                window.addEventListener('load', positionOverlay);
            }
        });
    </script>

