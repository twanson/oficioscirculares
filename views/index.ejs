    <script>
        // Auto-scroll al top en navegaci√≥n normal
        document.addEventListener('DOMContentLoaded', function() {
            // Navegaci√≥n normal - siempre ir al top
            window.scrollTo(0, 0);
        });
        
        // Tambi√©n forzar scroll al top antes de que cargue la p√°gina
        if (window.history.scrollRestoration) {
